{
	"name": "pylex",
	"displayName": "pylex",
	"description": "Expose a TreeNodeProvider for the high-level constructs of a Python program.",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [ "onView:lexNodes" ],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "lexNodes.refreshEntry",
				"title": "Refresh Lexer",
				"icon": {
					"light": "resources/light/refreshsvg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "package-explorer",
					"title": "Lex Nodes",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"package-explorer": [
				{
					"id": "lexNodes",
					"name": "Lex Nodes",
					"icon": "media/dep.svg",
					"contextualTitle": "Lex Nodes"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "lexNodes.refreshEntry",
					"when": "view == lexNodes",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
